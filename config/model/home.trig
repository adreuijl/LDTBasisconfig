@prefix elmo: <http://dotwebstack.org/def/elmo#> .
@prefix elmo-rt: <http://dotwebstack.org/def/elmo/result-type/>.
@prefix elmo-ps: <http://dotwebstack.org/def/elmo/persistence-strategy/>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix config: <http://dotwebstack.org/configuration/>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix dbo: <http://dbpedia.org/ontology/>.
@prefix xhtml: <http://www.w3.org/1999/xhtml/vocab#>.
@prefix http: <http://www.w3.org/2011/http#>.
@prefix dc: <http://purl.org/dc/elements/1.1/>.
@prefix skos: <http://www.w3.org/2004/02/skos/core#>.

GRAPH config:Theatre {

# ==========================
#
# Menu
#
# ==========================
  
  config:Menu a elmo:Representation;
    elmo:stage config:Stage;
    elmo:informationProduct config:MenuData;
    elmo:appearance config:MenuAppearance;
  .
  config:MenuAppearance a elmo:NavbarSearchAppearance
  .
  config:MenuData a elmo:InformationProduct;
    elmo:backend config:LocalBackend;
    elmo:query """
        prefix elmo1: <http://bp4mc2.org/elmo/def#>
        prefix xhtml: <http://www.w3.org/1999/xhtml/vocab#>
        prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#>
        CONSTRUCT {
        [] rdfs:label "HOME";
          xhtml:search "search";
          elmo1:data [elmo1:index "1"; rdfs:label "Concepten"; xhtml:link "/concepten"];
          elmo1:data [elmo1:index "2"; rdfs:label "Domeinen"; xhtml:link "/domeinen"]
        .
      }
      WHERE {}
    """;
  .

# ==========================
#
# Footer
#
# ==========================

  config:Footer a elmo:Representation;
    elmo:stage config:Stage;
    elmo:informationProduct config:FooterData;
    elmo:appearance config:FooterAppearance;
  .
  config:FooterAppearance a elmo:FooterAppearance;
  .
  config:FooterData a elmo:InformationProduct;
    elmo:backend config:LocalBackend;
    elmo:query """
      prefix elmo1: <http://bp4mc2.org/elmo/def#>
      CONSTRUCT {
        [] elmo1:html '''<div class="row">
          <div class="col-sm-4">
            <h4>Links</h4>
            <ul class="list-unstyled">
              <li>
                <a href="https://github.com/architolk/linked-data-theatre">Github codebase</a>
              </li>
              <li>
                <a href="https://github.com/architolk/linked-data-theatre/wiki">Wiki documentation</a>
              </li>
            </ul>
          </div>
          <div class="col-sm-4">
            <h4>configuration</h4>
            <p>Deze configuratie is een eerste opzet voor de gegevens catalogus van het InformatieHuis Water (IHW) op basis van de dotwebstack applicatie.</p>
          </div>
          <div class="col-sm-4">
            <h4>License</h4>
            <p>GPL 3.0 / CC-BY-SA</p>
          </div>
        </div>'''
      }
      WHERE {}
    """;
  .

# ==========================
#
# Format index
#
# ==========================

  config:FormatIndex a elmo:Representation;
    elmo:stage config:Stage;
    elmo:informationProduct config:FormatIndexData;
    elmo:appearance config:FormatIndexAppearance;
  .
  config:FormatIndexAppearance a elmo:IndexAppearance;
    elmo:index "1"
  .
  config:FormatIndexData a elmo:InformationProduct;
    elmo:backend config:LocalBackend;
    elmo:query """
      CONSTRUCT {
        [] rdfs:label "a|b|c|d|e|f|g|h|i|j|k|l|m|n|o|p|q|r|s|t|u|v|w|x|y|z";
           rdf:value "a|b|c|d|e|f|g|h|i|j|k|l|m|n|o|p|q|r|s|t|u|v|w|x|y|z";
      }
      WHERE {}
    """;
  .

# ==========================
#
# Homepage
#
# ==========================

  config:Homepage a elmo:Representation;
    elmo:pathPattern "";
    elmo:stage config:Stage;
    elmo:informationProduct config:HomepageData;
    elmo:appearance [a elmo:HtmlAppearance];
	elmo:contains config:Menu;
	elmo:contains config:Footer;
  .
  config:HomepageData a elmo:InformationProduct;
    elmo:backend config:LocalBackend;
    elmo:query """
      prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>
      prefix elmo1: <http://bp4mc2.org/elmo/def#>
      CONSTRUCT {
        [] rdfs:label "Linked Data Theatre 2.0";
          elmo1:html '''
            <h1>It works!</h1>
        <p>Welkom op de website van de Aquo-standaard.</p>
        <p>Op deze website kunt u:</p>
        <ul>
        <li><strong><a href="http://localhost:8080/concepten">Termen en definities</a></strong> raadplegen in de Aquo LOC</li>
        </ul>
        <ul>
        <li><strong><a href="http://localhost:8080/domeinen">Domeinwaarden en domeintabellen</a></strong> raadplegen in de Aquo DS</li>
        </ul>
        <ul>
        <li>Meer lezen over de Aquo-standaard</li>
        </ul>
        <ul>
        <li>Achterhalen welke delen uit de standaard van belang zijn voor uw werkveld</li>
        </ul>
        <ul>
        <li>Informatie over de tool die de Aquo-standaard ontsluiten</li>
        </ul>
        <ul>
        <li>Veel informatie direct downloaden</li>
        </ul>
          '''
        .
      }
      WHERE {}
    """
  .

}
