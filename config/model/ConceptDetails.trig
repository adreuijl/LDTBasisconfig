@prefix adms: 			<http://www.w3.org/ns/adms#>.
@prefix elmo: <http://dotwebstack.org/def/elmo#> . 
@prefix elmo-rt: <http://dotwebstack.org/def/elmo/result-type/>. 
@prefix elmo-ps: <http://dotwebstack.org/def/elmo/persistence-strategy/>. 
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> . 
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> . 
@prefix config: <http://dotwebstack.org/configuration/>. 
@prefix sh: <http://www.w3.org/ns/shacl#>. 
@prefix dbo: <http://dbpedia.org/ontology/>. 
@prefix xhtml: <http://www.w3.org/1999/xhtml/vocab#>. 
@prefix http: <http://www.w3.org/2011/http#>. 
@prefix dc: <http://purl.org/dc/elements/1.1/>. 
@prefix skos: <http://www.w3.org/2004/02/skos/core#>.
@prefix thes: <http://purl.org/iso25964/skos-thes#>.
@prefix dct: <http://purl.org/dc/terms/>.
 

GRAPH config:Theatre { 


  config:ConceptenDetails a elmo:Representation; 
	elmo:pathPattern "/begrip";
	elmo:stage config:Stage;
	elmo:contains config:Menu; 
#	elmo:contains config:GraphDisplay;
	elmo:layer elmo:MiddleLayer;
	elmo:appearance config:ConceptDetailAppearance;
	elmo:informationProduct config:ConceptDetailData;
  . 
   
  config:ConceptDetailAppearance a elmo:Appearance;
	elmo:index 2;
	elmo:fragment [ 
	  elmo:appliesTo rdf:type; 
      elmo:appearance elmo:HiddenAppearance; 
	  rdfs:label "Begrip"@nl; 
	]; 
	elmo:fragment [ 
	  elmo:appliesTo rdfs:label; 
      elmo:appearance elmo:HiddenAppearance;
	  rdfs:label "Label"@nl;
	]; 
	elmo:fragment [
	  elmo:index 02;
	  elmo:appliesTo skos:example;
	  rdfs:label "Afbeelding"@nl;
	  elmo:appearance elmo:ImageAppearance;
	];
	elmo:fragment [ 
	  elmo:index 03; 
	  elmo:appliesTo skos:prefLabel; 
	  rdfs:label "Naam"@nl; 
	]; 
	elmo:fragment [
	  elmo:index 04;
	  elmo:appliesTo skos:altlabel;
	  rdfs:label "Synoniem"@nl;
	];
	elmo:fragment [  
	  elmo:index 05; 
	  elmo:appliesTo skos:definition; 
	  rdfs:label "Definitie"@nl; 
	]; 
	elmo:fragment [
	  elmo:index 06;
	  elmo:appliesTo skos:note;
	  rdfs:label "Toelichting"@nl;
	];
	elmo:fragment [
	  elmo:index 07;
	  elmo:appliesTo rdfs:comment;
	  rdfs:label "Uitleg"@nl;
	];
	elmo:fragment [ 
	  elmo:index 08;
	  elmo:appliesTo dc:source;
	  rdfs:label "Bron"@nl;
	];
#	elmo:fragment [
#	  elmo:index 9;
#	  elmo:appliesTo 
#	  rdfs:label "Afkorting"@nl;
#	];
	elmo:fragment [
	  elmo:index 10;
	  elmo:appliesTo dct:subject;
	  rdfs:label "Categorie"@nl;
	];
	elmo:fragment [
	  elmo:index 11;
	  elmo:appliesTo skos:notation;
	  rdfs:label "Code"@nl;
	];
    elmo:fragment [ 
	  elmo:index 20; 
	  elmo:appliesTo skos:broader; 
	  rdfs:label "Bredere term"@nl; 
      xhtml:link "begrip"; 
      elmo:name "begrip"; 
	]; 
	elmo:fragment [ 
	  elmo:index 21; 
	  elmo:appliesTo skos:narrower; 
	  rdfs:label "Nauwere term"@nl; 
      xhtml:link "begrip"; 
      elmo:name "begrip"; 
  ]; 
	elmo:fragment [ 
	  elmo:index 22; 
	  elmo:appliesTo skos:related; 
	  rdfs:label "Gerelateerde term"@nl; 
      xhtml:link "begrip"; 
	];
    elmo:fragment [
      elmo:index 23;
	  elmo:appliesTo thes:broaderPartitive;
	  rdfs:label "Onderdeel van"@nl;
	  xhtml:link "begrip";
	];
	elmo:fragment [
	  elmo:index 24;
	  elmo:appliesTo thes:narrowerPartitive;
	  rdfs:label "Heeft onderdeel"@nl;
	  xhtml:link "begrip";
	];
	elmo:fragment [
	  elmo:index 25;
	  elmo:appliesTo dct:isReplacedBy;
	  rdfs:label "Gebruik"@nl;
	  xhtml:link "begrip";
	];
	elmo:fragment [
	  elmo:index 26;
	  elmo:appliesTo dct:replaces;
	  rdfs:label "Gebruik in plaats van"@nl;
	  xhtml:link "begrip";
	];
	elmo:fragment [
	  elmo:index 27;
	  elmo:appliesTo adms:status;
	  rdfs:label "Status"@nl;
	];
  . 
	 
  config:ConceptTabelParameter a elmo:TermParameter; 
    elmo:name "subject"; 
	  elmo:shape [ 
	    sh:nodeKind sh:IRI 
		] 
	. 
	 
  config:ConceptDetailData a elmo:InformationProduct; 
    elmo:requiredParameter config:ConceptTabelParameter; 
	elmo:backend config:LocalBackend; 
	elmo:query """ 
	  PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#> 
      PREFIX skos: <http://www.w3.org/2004/02/skos/core#> 
	  CONSTRUCT { 
      ?subject ?p ?o. 
      ?o rdfs:label ?olabel 
    } 
	  WHERE { 
	    GRAPH <http://data.aquo.nl/id/dataset/begrippen> { 
        ?subject ?p ?o 
        OPTIONAL {?o rdfs:label ?olabel} 
		  } 
		} 
	  """ 
	. 

} 
